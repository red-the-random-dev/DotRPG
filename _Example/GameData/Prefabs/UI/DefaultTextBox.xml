<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE dotrpg-prefab>

<ObjectPrefab id="textbox" useWith="default/topdown">
  <Require>
    <SpriteFont id="vcr_large" location="Fonts/MainFont_Large"/>
    <SoundEffect id="pixelText" location="Sounds/text-scroll"/>
  </Require>
  <Include>
    <Dialogue textbox="dialogue_box" textline="dialogue_text" />
  </Include>
  <UI>
    <blank aspectRatio="1.33" defaultHeight="540">
      <ColorBox id="dialogue_box" visible="true" relativePos="0,1" origin="0,1" defaultHeight="540" relativeSize="1,0.2" color="255,255,255,255" elementPadding="16,16,16,16" subnodePadding="4,4,4,4">
        <ColorBox relativePos="0,0" relativeSize="1,1" origin="0,0" defaultHeight="108" color="0,0,0,255" subnodePadding="4,4,4,4">
          <Text scrollPerTick="1" id="dialogue_text" defaultHeight="216" font="vcr_large" scrollSound="pixelText" origin="0,0" relativePos="0,0">Please stand by</Text>
        </ColorBox>
      </ColorBox>
    </blank>
  </UI>
</ObjectPrefab>